{
  "name": "fontmarklet",
  "version": "0.0.1",
  "description": "A bookmarklet that allows you to preview your fonts or Google Webfonts on every webpage",
  "main": "index.js",
  "dependencies": {
    "react": "~0.11.1"
  },
  "devDependencies": {
    "browserify": "~2.36.0",
    "envify": "~0.2.0",
    "jest-cli": "^0.1.17",
    "reactify": "~0.4.0",
    "statics": "~0.1.0",
    "uglifyjs": "~2.3.6",
    "watchify": "~0.4.1"
  },
  "scripts": {
    "scss-build" : "sass --style compressed style/style.scss build/fm-style.min.css",
    "scss-watch" : "sass --style expanded --watch style/style.scss:playground/fm-style.css",
    "js-watch" : "NODE_ENV=development watchify -o playground/fontmarklet.js -v -d ./src",
    "js-build" : "NODE_ENV=production browserify ./src | uglifyjs -cm > build/fontmarklet.min.js",
    "bookmarklet" : "uglifyjs bookmarklet.js -cem --preamble 'javascript:' -o build/bookmarklet.js",
    "watch" : "npm run js-watch & npm run scss-watch",
    "build" : "mkdir -p build && npm run js-build && npm run scss-build",
    "server" : "http-server ./playground -s -p 4000",
    "start" : "npm run server & npm run watch",
    "test": "jest"
  },
  "author": "Johann Hofmann",
  "license": "MIT",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  }
}
